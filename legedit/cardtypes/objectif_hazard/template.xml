<?xml version="1.0" encoding="utf-8"?>
<xml>

	<template name="objectif_hazard" displayname="Hazard" deck="objectif"
		defaultsindeck="true" />

	<cardsize cardwidth="750" cardheight="1050" dpi="300" />

	<bgimage name="Image" fullsize="false" x="0" y="0" maxwidth="750"
		maxheight="1050" allowchange="true" zoomable="true" />

	<!-- <image name="back_underlay" templatefile="true" path="back_underlay.png"
		fullsize="true" x="0" y="0" maxwidth="750" maxheight="1050"
		allowchange="false" zoomable="false" /> -->

	<styles>

		<style name="Villains">

			<cardname name="Hazard" defaultvalue="Hazard"
				allowchange="true" includesubname="true" highlight="banner"
				highlightcolour="#111111" uppercase="true" alignment="center" x="375"
				y="40" colour="#e9dc98" textsize="48" subnametext="%DECKNAME%"
				subnameeditable="true" subnamesize="34" subnamegap="15" blurradius="15"
				bluedouble="true" blurexpand="4" />

			<icon name="Team" defaultvalue="none" allowchange="true"
				icontype="team" x="50" y="50" maxwidth="60" maxheight="60"
				drawunderlay="true" blurradius="10" bluedouble="false" blurexpand="2"
				blurcolour="#000000" />

		</style>

		<style name="Base Set">

			<cardname name="Hazard" defaultvalue="Hazard"
				allowchange="true" includesubname="true" highlight="blur"
				highlightcolour="#111111" uppercase="true" alignment="center" x="375"
				y="40" colour="#e9dc98" textsize="48" subnametext="%DECKNAME%"
				subnameeditable="true" subnamesize="34" subnamegap="15" blurradius="15"
				bluedouble="true" blurexpand="4" />

			<icon name="Team" defaultvalue="none" allowchange="true"
				icontype="team" x="50" y="50" maxwidth="60" maxheight="60"
				drawunderlay="true" blurradius="10" bluedouble="false" blurexpand="2"
				blurcolour="#000000" />

		</style>

	</styles>

	<property name="Number in Deck" property="numberindeck"
		defaultvalue="1" />

</xml>

